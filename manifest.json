{
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "manifest_version": 2,
  "version": "0.1.9.1",
  "homepage_url": "https://github.com/aaronpk/YouTube-Chat-Overlay",
  "default_locale": "en",
  "web_accessible_resources": ["img/*.png"],
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "https://youtube.com/*", "https://www.youtube.com/*", "https://studio.youtube.com/*", "https://chat.restream.io/*", "storage"
  ],
  "content_scripts": [{
    "css": ["common.css"],
    "js": ["jquery.js", "youtube.js"],
    "matches": ["https://youtube.com/live_chat*", "https://www.youtube.com/live_chat*", "https://studio.youtube.com/live_chat*"]
  },
  {
    "css": ["common.css"],
    "js": ["jquery.js", "jquery.waituntilexists.js", "restream.js"],
    "matches": ["https://chat.restream.io/*"]
  }
  ],
  "options_ui": {
    "page": "settings/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "live-chat-overlay@aaronpk.tv",
      "strict_min_version": "80.0"
    }
  }
}
